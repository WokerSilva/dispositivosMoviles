<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo para las CardView -->
    <style name="EstiloCarta" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Estilo para las ImageView -->
    <style name="EstiloImagenAlbum">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Estilo para los TextView de titulo-->
    <style name="EstiloTituloAlbum">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo para los botones  -->
    <style name="EstiloBotonVerCanciones">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Ver Canciones</item>
        <item name="android:textSize">12sp</item>
        <item name="android:backgroundTint">#FF5722</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Estilo para el contenedor de la carta -->
    <style name="EstiloContenedorCarta">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- rstilo para el contenedor de titulo y botón -->
    <style name="EstiloContenedorTextoBoton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <!-- Estilo para el CheckBox en forma de corazón -->
    <style name="EstiloCorazonCheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/selector_corazon</item>
        <item name="android:background">@null</item>
    </style>
</resources>