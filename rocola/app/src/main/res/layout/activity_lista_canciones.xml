<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Título de la pantalla -->
    <TextView
        android:id="@+id/tituloLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Canciones del Álbum Revolver - The Beatles"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Canción 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1. Taxman"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/checkBox1"
                    style="@style/EstiloCorazonCheckBox" />
            </LinearLayout>

            <!-- Canción 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2. Eleanor Rigby"
                    android:textSize="18sp" />
                <CheckBox
                    android:id="@+id/checkBox2"
                    style="@style/EstiloCorazonCheckBox" />
            </LinearLayout>

            <!-- Canción 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3. I'm Only Sleeping"
                    android:textSize="18sp" />
                <CheckBox
                    android:id="@+id/checkBox3"
                    style="@style/EstiloCorazonCheckBox" />
            </LinearLayout>

            <!-- Canción 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4. Love You To"
                    android:textSize="18sp" />
                <CheckBox
                    android:id="@+id/checkBox4"
                    style="@style/EstiloCorazonCheckBox" />
            </LinearLayout>

            <!-- Canción 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">
