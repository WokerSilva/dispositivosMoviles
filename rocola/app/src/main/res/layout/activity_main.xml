<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- ScrollView para desplazamiento de la ptanlla -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Contenedor de dos columnas -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center">

            <!-- Columna Izquierda -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Carta 1 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cartaAlbum1"
                    style="@style/EstiloCarta">
                    <LinearLayout style="@style/EstiloContenedorCarta">
                        <ImageView
                            android:id="@+id/imagenAlbum1"
                            style="@style/EstiloImagenAlbum"
                            android:src="@drawable/Album1" />
                        <LinearLayout style="@style/EstiloContenedorTextoBoton">

                            <TextView
                                android:id="@+id/tituloAlbum1"
                                style="@style/EstiloTituloAlbum"
                                android:text="Revolver" />
                            <Button
                                android:id="@+id/botonVerCanciones1"
                                style="@style/EstiloBotonVerCanciones" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Carta 3 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cartaAlbum3"
                    style="@style/EstiloCarta">
                    <LinearLayout style="@style/EstiloContenedorCarta">
                        <ImageView
                            android:id="@+id/imagenAlbum3"
                            style="@style/EstiloImagenAlbum"
                            android:src="@drawable/Album3" />
                        <LinearLayout style="@style/EstiloContenedorTextoBoton">

                            <TextView
                                android:id="@+id/tituloAlbum3"
                                style="@style/EstiloTituloAlbum"
                                android:text="Abbey Road" />
                            <Button
                                android:id="@+id/botonVerCanciones3"
                                style="@style/EstiloBotonVerCanciones" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Carta 5 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cartaAlbum5"
                    style="@style/EstiloCarta">
                    <LinearLayout style="@style/EstiloContenedorCarta">
                        <ImageView
                            android:id="@+id/imagenAlbum5"
                            style="@style/EstiloImagenAlbum"
                            android:src="@drawable/Album5" />
                        <LinearLayout style="@style/EstiloContenedorTextoBoton">

                            <TextView
                                android:id="@+id/tituloAlbum5"
                                style="@style/EstiloTituloAlbum"
                                android:text="A Hard Days Night" />
                            <Button
                                android:id="@+id/botonVerCanciones5"
                                style="@style/EstiloBotonVerCanciones" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Columna Derecha -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Carta 2 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cartaAlbum2"
                    style="@style/EstiloCarta">
                    <LinearLayout style="@style/EstiloContenedorCarta">
                        <ImageView
                            android:id="@+id/imagenAlbum2"
                            style="@style/EstiloImagenAlbum"
                            android:src="@drawable/Album2" />
                        <LinearLayout style="@style/EstiloContenedorTextoBoton">

                            <TextView
                                android:id="@+id/tituloAlbum2"
                                style="@style/EstiloTituloAlbum"
                                android:text="Please Please Me" />
                            <Button
                                android:id="@+id/botonVerCanciones2"
                                style="@style/EstiloBotonVerCanciones" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Carta 4 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cartaAlbum4"
                    style="@style/EstiloCarta">
                    <LinearLayout style="@style/EstiloContenedorCarta">
                        <ImageView
                            android:id="@+id/imagenAlbum4"
                            style="@style/EstiloImagenAlbum"
                            android:src="@drawable/Album4" />
                        <LinearLayout style="@style/EstiloContenedorTextoBoton">

                            <TextView
                                android:id="@+id/tituloAlbum4"
                                style="@style/EstiloTituloAlbum"
                                android:text="Rubber Soul" />
                            <Button
                                android:id="@+id/botonVerCanciones4"
                                style="@style/EstiloBotonVerCanciones" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Carta 6 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cartaAlbum6"
                    style="@style/EstiloCarta">
                    <LinearLayout style="@style/EstiloContenedorCarta">
                        <ImageView
                            android:id="@+id/imagenAlbum6"
                            style="@style/EstiloImagenAlbum"
                            android:src="@drawable/Album6" />
                        <LinearLayout style="@style/EstiloContenedorTextoBoton">

                            <TextView
                                android:id="@+id/tituloAlbum6"
                                style="@style/EstiloTituloAlbum"
                                android:text="Sgt Pepper's Lonely Hearts Club Band" />
                            <Button
                                android:id="@+id/botonVerCanciones6"
                                style="@style/EstiloBotonVerCanciones" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>